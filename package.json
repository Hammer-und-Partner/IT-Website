{
	"name": "@hammer-und-partner/it-website",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "pnpm run build:kit && pnpm run build:server",
		"build:kit": "vite build",
		"build:kit:dev": "vite build --watch",
		"build:server": "tsc server/app.ts --esModuleInterop --target esnext --moduleResolution node",
		"build:server:dev": "tsc server/app.ts --esModuleInterop --target esnext --moduleResolution node --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"commit": "git add . && git-cz && git push",
		"dev": "vite dev",
		"extract": "svelte-i18n extract \"src/**/*.svelte\" src/locales/en.json",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"preview": "vite preview",
		"release": "standard-version",
		"server": "node server/app.js",
		"server:dev": "nodemon server/app.js",
		"start": "pnpm run build && pnpm run server",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"test:coverage": "jest --coverage"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@types/dompurify": "^3.0.5",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.14.10",
		"@types/nodemailer": "^6.4.15",
		"@typescript-eslint/eslint-plugin": "^7.16.0",
		"commitizen": "^4.3.0",
		"concurrently": "^8.2.2",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.6.0",
		"eslint-config-prettier": "^9.1.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"nodemon": "^3.1.4",
		"eslint-plugin-svelte": "^2.42.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"standard-version": "^9.5.0",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.4",
		"svelte-eslint-parser": "^0.39.2",
		"svelte-fa": "^4.0.2",
		"svelte-jester": "^5.0.0",
		"ts-jest": "^29.2.1",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"svelte-preprocess": "^6.0.2",
		"vite": "^5.3.4"
	},
	"type": "module",
	"dependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.5.2",
		"@fortawesome/free-regular-svg-icons": "^6.5.2",
		"@fortawesome/free-solid-svg-icons": "^6.5.2",
		"@sveltejs/adapter-node": "^5.2.0",
		"@typescript-eslint/parser": "^7.16.0",
		"@typescript-eslint/type-utils": "^7.16.0",
		"@typescript-eslint/utils": "^7.16.0",
		"autoprefixer": "^10.4.19",
		"dompurify": "^3.1.6",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"lint": "^1.1.2",
		"nodemailer": "^6.9.14",
		"postcss": "^8.4.39",
		"postcss-safe-parser": "^7.0.0",
		"sass": "^1.77.7",
		"svelte-i18n": "^4.0.0",
		"tailwindcss": "^3.4.4",
		"uuid": "^10.0.0"
	},
	"packageManager": "pnpm@9.4.0+sha512.f549b8a52c9d2b8536762f99c0722205efc5af913e77835dbccc3b0b0b2ca9e7dc8022b78062c17291c48e88749c70ce88eb5a74f1fa8c4bf5e18bb46c8bd83a",
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
